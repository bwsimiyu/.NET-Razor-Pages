@page
@model RazorPagesRocket.Pages_Rockets.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        Name:
        <input type="text" asp-for="SearchString" />
        <input type="submit" value="Search">
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rocket[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rocket[0].LaunchDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rocket[0].NumberOfEngines)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rocket[0].Payload)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rocket[0].Cores)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rocket[0].DesiredOrbit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Rocket) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LaunchDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfEngines)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payload)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cores)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DesiredOrbit)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
